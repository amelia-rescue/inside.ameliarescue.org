# Cognito Configuration
COGNITO_ISSUER=https://cognito-idp.us-east-2.amazonaws.com/YOUR_USER_POOL_ID
COGNITO_CLIENT_ID=YOUR_CLIENT_ID
COGNITO_DOMAIN=auth.inside.ameliarescue.org
COGNITO_USER_POOL_ID=YOUR_USER_POOL_ID

# Application URLs
APP_URL=http://localhost:5173
FILE_CDN_URL=http://localhost:5173

# Session
# For local development, use a simple secret
SESSION_SECRET=local-dev-secret
# For production, the session secret is stored in AWS Secrets Manager
# The Lambda function will retrieve it using this ARN (set automatically by CDK)
# SESSION_SECRET_ARN=arn:aws:secretsmanager:us-east-2:ACCOUNT_ID:secret:inside-amelia-rescue/session-secret-XXXXX

# DynamoDB Tables
USERS_TABLE_NAME=aes_users
CERTIFICATION_TYPES_TABLE_NAME=aes_certification_types
USER_CERTIFICATIONS_TABLE_NAME=aes_user_certifications
ROLES_TABLE_NAME=aes_roles
TRACKS_TABLE_NAME=aes_tracks

# S3 Bucket
FILE_UPLOADS_BUCKET_NAME=YOUR_BUCKET_NAME

# AWS Region (optional, will be extracted from COGNITO_ISSUER if not set)
AWS_REGION=us-east-2

# WebSocket API (for real-time features)
# From CDK output: WebSocketApiEndpoint
VITE_WEBSOCKET_URL=wss://svzzsce7u8.execute-api.us-east-2.amazonaws.com/prod
